<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_edi_export_records_wizard_form" model="ir.ui.view">
        <field name="name">edi.export.records.wizard.form</field>
        <field name="model">edi.export.records.wizard</field>
        <field name="arch" type="xml">
            <form>
                <div class="alert alert-info text-left" role="alert">
                    Upon completion of the process, EDI transactions will be created for the Outgoing type.
                    These transactions can be processed manually or automatically through a scheduled action.
                </div>
                <sheet>
                    <group>
                        <field name="edi_config_table_id"
                               domain="[('main_table', '=', True), ('edi_type', '=', 'Outgoing')]" required="1"/>
                        <field name="product_ids" widget="many2many_tags" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_submit_button" string="Submit" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="edi_export_records_wizard_action" model="ir.actions.act_window">
        <field name="name">Export Records</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">edi.export.records.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_edi_export_records_wizard"
              name="Export Records"
              parent="menu_edi_config_table"
              action="edi_export_records_wizard_action"
              sequence="4"/>
</odoo>
