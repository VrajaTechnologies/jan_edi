<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_tree_ftp_list" model="ir.ui.view">
        <field name="name">view_tree_ftp_list</field>
        <field name="model">ftp.list</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_form_ftp_list" model="ir.ui.view">
        <field name="name">view_form_ftp_list</field>
        <field name="model">ftp.list</field>
        <field name="arch" type="xml">
            <form create="false">
                <sheet>
                    <group string="DIRECTORY" name="FTP_directory_main">
                        <group name="FTP_directory_sub">
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="edi_config_table_id" domain="[('main_table','=',True)]"/>
                            <field name="mapping_table_search_using_xml_header"/>
                            <field name="daily_new_file"/>
                            <field name="split_records"/>
                            <field name="main_record_xml_element"
                                   required="split_records"
                                   invisible="not split_records"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Attachments">
                            <field name="ftp_attachment_ids" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ftp_list" model="ir.actions.act_window">
        <field name="name">Directory</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ftp.list</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'group_by': ['server_type']}</field>
    </record>

    <menuitem id="ftp_directory_list_main_menu"
              name="Directory"
              parent="odoo_edi_integration.menu_ftp_syncing" sequence="3"/>
    <menuitem id="ftp_directory_list"
              action="action_ftp_list"
              name="Directory"
              parent="odoo_edi_integration.ftp_directory_list_main_menu"/>

</odoo>
