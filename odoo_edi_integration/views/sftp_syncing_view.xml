<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sftp_syncing_tree" model="ir.ui.view">
            <field name="name">sftp.syncing.tree</field>
            <field name="model">sftp.syncing</field>
            <field name="arch" type="xml">
                <tree string="SFTP Syncing">
                    <field name="name"/>
                    <field name="is_verified"/>
                </tree>
            </field>
        </record>

        <record id="sftp_syncing_form" model="ir.ui.view">
            <field name="name">sftp.syncing.form</field>
            <field name="model">sftp.syncing</field>
            <field name="arch" type="xml">
                <form string="SFTP Syncing">
                    <header>
                        <button name="action_check_sftp_connection" type="object" class="btn-primary"
                                string="Check Connection" invisible="is_verified == True"/>
                        <button name="action_check_sftp_disconnect" type="object" class="btn-primary"
                                string="Disconnect" invisible="is_verified == False"/>
                        <button name="sync_sftp_directory" string="Sync SFTP Directories" class="oe_highlight" type="object"
                                invisible="is_verified == False"/>
                        <button name="sync_sftp_inner_files" string="Sync Inner Files" class="oe_highlight" type="object"
                                invisible="is_verified == False"/>
                    </header>
                    <sheet>
                        <field name="is_verified" invisible="1"/>
                        <widget name="web_ribbon" title="Connected" bg_color="bg-success"
                                invisible="is_verified == False"/>
                        <widget name="web_ribbon" title="Not Connected" bg_color="bg-danger"
                                invisible="is_verified == True"/>
                        <div name="button_box" position="inside">
                            <button class="oe_stat_button" type="action"
                                    name="%(odoo_edi_integration.action_edi_sftp_cron_id)d"
                                    string="Schedule Action"
                                    icon="fa-clock-o"/>
                        </div>
                        <group col="4">
                            <field name="name" required="1"/>
                            <field name="sftp_auth_method" required="1"/>
                        </group>
                        <br/>
                        <br/>
                        <notebook>
                            <page string="Credentials" name="sftp_credentials_page">
                                <group>
                                    <field name="sftp_host" required="1"/>
                                    <field name="sftp_username" required="1"/>
                                    <field name="sftp_password" password="True"
                                           required="sftp_auth_method == 'password'"
                                           invisible="sftp_auth_method != 'password'"/>
                                    <field name="sftp_pem_key"
                                           required="sftp_auth_method == 'pem_key'"
                                           invisible="sftp_auth_method != 'pem_key'"/>
                                    <field name="sftp_pem_passphrase"
                                           invisible="sftp_auth_method != 'pem_key'"/>
                                    <field name="sftp_port" required="1"/>
                                    <field name="file_import_path" required="1"/>
                                </group>
                            </page>
                            <page string="Directory Lists" name="directory_lists">
                                <field name="ftp_directory_ids" nolabel="1" options="{'no_open': True}">
                                    <tree editable="top" create="false" delete="false">
                                        <field name="name" width="52%"/>
                                        <field name="daily_new_file" width="18%"/>
                                        <field name="download_this" width="10%"/>
                                        <field name="upload_this" width="10%"/>
                                        <field name="cron_created" column_invisible="1"/>
                                        <button name="create_cron" string="Generate Auto Sync" type="object"
                                                class="oe_highlight" invisible="cron_created == True" width="10%"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_sftp_syncing" model="ir.actions.act_window">
            <field name="name">SFTP Syncing</field>
            <field name="res_model">sftp.syncing</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_item_sftp_syncing" name="SFTP Syncing" parent="menu_ftp_syncing"
                  action="action_sftp_syncing" sequence="2"/>

    </data>
</odoo>
